const data = `https://www.sarbeh.com/api/Get`;
// SOrry Gak Clean, ini aku ngerubah biar gk gini malah gagal mulu. ntaran aku edit
const { link } = Astro.params;

async function fetchData() {
  try {
    let response = await fetch(data);
    let jsonData = await response.json();

    let foundItem = jsonData.find((item) => item.uniqcode === link);

    if (foundItem) {
      return foundItem.link;
    } else {
      console.log('Item not found');
      // Mengembalikan halaman error atau melakukan sesuatu yang spesifik jika item tidak ditemukan
      return "/404";
    }
  } catch (err) {
    console.error('Error:', err);
    // Mengembalikan halaman error atau melakukan sesuatu yang spesifik jika terjadi kesalahan saat fetch
    return "/404";
  }
}

let foundLink = await fetchData();
return Astro.redirect(foundLink);
