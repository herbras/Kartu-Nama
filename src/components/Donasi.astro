<div  class="card mt-4 text-center w-full bg-base-100 shadow-md shadow-neutral-500/80 hover:shadow-lime-500/40" data-theme="light">
    <h1 class="card-title text-xl mx-auto w-fit mt-5">
       Donasi
       
      </h1>

      <div class="card-body my-2 w-full grid gap-8">
        <div
            id="bank-numbers"
            x-data="{ bankNum: [
                {
                    nama: 'BSI',
                    norek: 6500063007
                }
            ] }"
            class=""
        >
            <template x-for="bank in bankNum">
                <div class="">
                    <h4
                        x-text="bank.nama"
                        class="font-bold text-2xl text-slate-500	"
                     
                    >
                    </h4>
                    <div>
                        <p x-text="bank.norek" class="font-semibold text-2xl md:text-5xl"></p>
                    </div>
                    <div class="mb-2 mt-2">
                        <a
                            class="btn btn-sm cursor-pointer"
                            x-on:click="navigator.clipboard.writeText(bank.norek).then(() => { alert(`Norek ${bank.nama} berhasil disalin`) }).catch(() => { alert('Norek gagal disalin') })"
                        >Copy</a
                        >
                    </div>
                </div>
            </template>
        </div>
        <h4 class="font-bold text-lg text-slate-500">
            Yayasan Makkah Wady Mubarok 

        </h4>
    </div>
</div>